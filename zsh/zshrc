#zstyle :compinstall filename '/home/alokn/.zshrc'
uln() {
    for i in $*; do
        if [[ -L $i ]]; then
            lnk=$(realpath $i)
            rm $i
            cp $lnk $i
        else
            echo "Not a link $i"
        fi
        shift
    done 
}

wh() {
    case "$(type $1)" in
        *function*)
            whence -f $1
            ;;
        *)
            which $1
            ;;
    esac
}
compdef wh=which

bk() {
    cp $1 $1.bk
}

