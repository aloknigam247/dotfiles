function prompt_gen() {
    zmodload zsh/nearcolor

    local BG="15"
    local FG="0"
    local SEG=""
    local SEP="$1"
    local p_SEP=""
    local p_BG=""
    local prompt_str=""
    
    shift
    
    while [[ $# -ne 0 ]]; do
        for k v in $1; do
            case $k in
                "BG")
                    BG=$v
                    ;;
                "FG")
                    FG=$v
                    ;;
                "SEG")
                    SEG=$v
                    ;;
            esac
        done
    
        if [[ $p_SEP ]]; then
            p_SEP="%K{$BG}%F{$p_BG}$SEP "
        fi
    
        pr="$p_SEP%K{$BG}%F{$FG}$SEG "
        p_SEP="%k%F{$BG}$SEP "
        p_BG=$BG
    
        prompt_str="$prompt_str$pr"
    
        shift
    done
    
    export PROMPT="$prompt_str$p_SEP%k%f"
}

prompt_gen "" "BG #4392F1 FG #ECE8EF SEG %M" "BG #ECE8EF FG #4392F1 SEG %~"

function rprompt() {
    branch=$(git rev-parse --abbrev-ref HEAD 2>& /dev/null)

    if [[ $branch ]]; then
        echo "%F{#4392F1}%F{#ECE8EF}%K{#4392F1} $branch%k%F{#4392F1}%f"
    fi
}

export RPROMPT='$(rprompt)'

PATH=.:$PATH
