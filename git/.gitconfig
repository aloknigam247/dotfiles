[fetch]
    prune = true

[core]
    editor = nvim
    fsmonitor = true
    pager = delta
    autocrlf = true

[push]
    autoSetupRemote = true

[user]
    name = Alok Nigam

[interactive]
    diffFilter = delta --color-only

[includeIf "TERM_THEME:Light"]
    path = ~/light.gitconfig
; FIX: Color scheme for light and dark
[delta]
    colorMoved = default
    commit-decoration-style = box
    commit-style = red
    file-added-label = 
    file-copied-label = 
    file-decoration-style = ""
    file-modified-label = " "
    file-removed-label = 󰆴
    file-renamed-label = 
    file-transformation = "s/$/  /"
    hunk-header-decoration-style = ""
    hunk-header-style = "line-number syntax"
    hunk-label = ""
    light = true
    line-numbers = true
    line-numbers-left-format = "{nm:^1}│"
    line-numbers-right-format = "{np:^1}┃"
    navigate = true
    side-by-side = true
    true-color = always

[merge]
    conflictstyle = diff3
    tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED
    keepBackup = false

[diff]
    colorMoved = default
    tool = delta

[safe]
    directory = D:/Scoop/apps/scoop/current
    directory = D:/Scoop/buckets/versions
    directory = D:/Scoop/buckets/main
    directory = D:/Scoop/buckets/extras

[alias]
    ignore = update-index --skip-worktree
    unignore = update-index --no-skip-worktree
    ignored = !git ls-files -v | grep \"^S\"
