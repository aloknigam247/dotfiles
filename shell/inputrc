# Use more intelligent Up/Down behaviour: use the text that has already been
"\e[B": history-search-forward
"\e[A": history-search-backward

# Show color for prefix in tab completion
set colored-completion-prefix on

# Show different colors for different file types on tab completion
set colored-stats on

# Ignore case for tab completion
set completion-ignore-case on

# Treat '-' and '_' as same for tab completion
set completion-map-case on

# Append / to directorie link
set mark-symlinked-directories on

# List completion works immediately
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Skip words when they are autocompleted if they are same
set skip-completed-text on

# Show file type by appending a character like 'ls -F'
set visible-stats on


